        </Style>

        <Style x:Key="BlackPawn" TargetType="Path" BasedOn="{StaticResource ChessPieces}">
            <Setter Property="Fill" Value="Black"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
