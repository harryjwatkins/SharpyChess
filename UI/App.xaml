<Application x:Class="UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:piece="clr-namespace:UI.Pieces"
             xmlns:local="clr-namespace:UI"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate x:Key="WhitePawn">
            <piece:WhitePawn />
        </DataTemplate>
        <DataTemplate x:Key="BlackPawn">
            <piece:BlackPawn />
        </DataTemplate>
        
        <DataTemplate x:Key="WhiteRook">
            <piece:WhiteRook />
        </DataTemplate>
        <DataTemplate x:Key="BlackRook">
            <piece:BlackRook />
        </DataTemplate>

        <DataTemplate x:Key="WhiteKnight">
            <piece:WhiteKnight />
        </DataTemplate>
        <DataTemplate x:Key="BlackKnight">
            <piece:BlackKnight />
        </DataTemplate>

        <DataTemplate x:Key="WhiteBishop">
            <piece:WhiteBishop />
        </DataTemplate>
        <DataTemplate x:Key="BlackBishop">
            <piece:BlackBishop />
        </DataTemplate>

        <DataTemplate x:Key="WhiteQueen">
            <piece:WhiteQueen />
        </DataTemplate>
        <DataTemplate x:Key="BlackQueen">
            <piece:BlackQueen />
        </DataTemplate>
    </Application.Resources>
</Application>
